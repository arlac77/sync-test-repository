{
  "name": "sync-test-repository",
  "version": "0.0.0-semantic-release",
  "description": "test repository for npm-template-sync",
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "prepare": "rollup -c",
    "pretest": "rollup -c",
    "test": "mocha tests/*-test.js && ava --timeout 2m && npm run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "posttest": "markdown-doctest",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme {{main}} --section=API && documentation readme --section=API ./src/**/*.mjs",
    "lint": "documentation lint {{main}} && npm run lint:docs",
    "lint:docs": "documentation lint ./src/**/*.mjs",
    "precover": "rollup -c",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "ava": "^6.1.1",
    "c8": "^9.1.0",
    "chai": "^4.2.0",
    "documentation": "^14.0.3",
    "jsdoc-to-markdown": "^5.0.0",
    "markdown-doctest": "^0.9.1",
    "mocha": "^6.1.2",
    "nyc": "^14.1.2",
    "rollup": "^1.15.6",
    "semantic-release": "^23.0.2"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arlac77/sync-test-repository.git"
  },
  "bugs": {
    "url": "https://github.com/arlac77/sync-test-repository/issues"
  },
  "homepage": "https://github.com/arlac77/sync-test-repository#readme",
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./coverage"
  },
  "xo": {
    "space": true
  },
  "template": {
    "inheritFrom": "arlac77/template-node-app"
  }
}
